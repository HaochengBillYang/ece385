module BUS(input logic[15:0] MARMUX, PC, ALU, MDR,
				input logic MARMUX_G, PC_G, ALU_G, MDR_G,
				output logic [15:0] BUS_out
				);

			always_comb
			begin
			if(MARMUX_G == 1'b1)
				BUS_out = MARMUX;
			else if(PC_G == 1'b1)
				BUS_out = PC;
			else if(ALU_G == 1'b1)
				BUS_out = ALU;
			else if(MDR_G == 1'b1)
				BUS_out = MDR;
			else
				BUS_out = 16'bxxxxxxxxxxxxxxxx;
			end
			
endmodule
